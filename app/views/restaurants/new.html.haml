.container{style: 'margin-top: 85px;'}
  .row
    %h2 Write a Review
    %table{:border => "0", :width => "100%"}
      .col-md-9.col-md-offset-0
        %tr
          %td{:width => "77%"}
            %div
              = form_for @restaurant do |f|
                %fieldset
                  .form-group
                    = f.label :name, class: 'col-md-3 control-label'
                    = f.text_field :name, class: 'form-control'
                  .form-group
                    = collection_select(:restaurant, :category_id, Category.all, :id, :name,{}, {:class =>'form-control'})
                  .form-group  
                    = f.label :description, class: 'col-md-3 control-label'
                    = f.text_area :description, class: 'form-control'
                  .form-group                      
                    = f.label :address1, class: 'col-md-3 control-label'
                    = f.text_field :address1, class: 'form-control'
                  .form-group    
                    = f.label :address2, class: 'col-md-3 control-label'
                    = f.text_field :address2, class: 'form-control'
                  .form-group    
                    = f.label :city, class: 'col-md-3 control-label'
                    = f.text_field :city, class: 'form-control'
                  .form-group    
                    = f.label :state, class: 'col-md-3 control-label'
                    = f.text_field :state, class: 'form-control'
                  .form-group    
                    = f.label :zipcode, class: 'col-md-3 control-label'
                    = f.text_field :zipcode, class: 'form-control'
                  .form-group    
                    = f.label :phone, class: 'col-md-3 control-label'
                    = f.text_field :phone, class: 'form-control'
                  .form-group    
                    = f.label :email, class: 'col-md-3 control-label'
                    = f.text_field :email, class: 'form-control'
                  .form-group    
                    = f.submit
  
 
/ Contact
%section#contact.page-section
  .container
    .text-center
      %h2.section-heading.text-uppercase Contact Us
      %h3.section-subheading.text-muted Lorem ipsum dolor sit amet consectetur.
    %form#contactForm{:name => "sentMessage", :novalidate => "novalidate"}
      .row.align-items-stretch.mb-5
        .col-md-6
          .form-group
            %input#name.form-control{"data-validation-required-message" => "Please enter your name.", :placeholder => "Your Name *", :required => "required", :type => "text"}/
            %p.help-block.text-danger
          .form-group
            %input#email.form-control{"data-validation-required-message" => "Please enter your email address.", :placeholder => "Your Email *", :required => "required", :type => "email"}/
            %p.help-block.text-danger
          .form-group.mb-md-0
            %input#phone.form-control{"data-validation-required-message" => "Please enter your phone number.", :placeholder => "Your Phone *", :required => "required", :type => "tel"}/
            %p.help-block.text-danger
        .col-md-6
          .form-group.form-group-textarea.mb-md-0
            %textarea#message.form-control{"data-validation-required-message" => "Please enter a message.", :placeholder => "Your Message *", :required => "required"}
            %p.help-block.text-danger
      .text-center
        #success
        %button#sendMessageButton.btn.btn-primary.btn-xl.text-uppercase{:type => "submit"} Send Message

